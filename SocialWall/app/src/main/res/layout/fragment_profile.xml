<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.BoardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profileAvatar"
            android:src="@drawable/ic_board"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_width="240dp"
            android:layout_height="240dp" />

        <TextView
            android:id="@+id/profileUsername"
            android:text="My nombre de usuario :)"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/profileAvatar"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/profileEmail"
            android:text="itsmylife@anditsnowornever.com"
            android:textSize="17dp"
            android:layout_below="@id/profileUsername"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</FrameLayout>